#:import IconButton dad_player.ui.widgets.icon_button.IconButton

<MainScreen>:
    BoxLayout:
        id: main_screen_layout
        orientation: 'vertical'
        # spacing: dp(5)

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            padding: [dp(10), dp(5), dp(10), dp(5)]
            spacing: dp(10)

            Label:
                text: "DAD Player"
                font_size: '20sp'
                size_hint_x: None
                width: self.texture_size[0] + dp(10)
                halign: 'left'
                valign: 'center'
                # text_size: self.width, None

            Widget:
                size_hint_x: 1

            Button:
                id: settings_button_main
                text: "Settings"
                font_name: "Roboto"
                size_hint_x: None
                width: self.texture_size[0] + dp(20)
                height: dp(40)
                on_release: root.open_app_settings()

        TabbedPanel:
            id: main_tab_panel
            do_default_tab: False
            tab_pos: 'top_mid'
            tab_height: dp(40)
            size_hint: 1, 1 
